{
  "importMap": "import_map.json",
  "tasks": {
    "build": "silverbullet plug:compile --import_map import_map.json dice.plug.yaml",
    "watch": "silverbullet plug:compile --import_map import_map.json dice.plug.yaml -w"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "*.md",
      "**/*.md",
      "*.plug.js"
    ]
  }
}